extends ../layout/index

block content
    div.py-10
    h1.text-4xl.my-10.font-extrabold.text-center Real
        span.font-normal Estates
    h2.text-center.text-2xl.font-extrabold=page

    if errors
        div(class='max-w-md mx-auto my-10')
            each e in errors
                p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=e.msg

    div(class='mt-8 mx-auto max-w-md')
        div(class='bg-white py-8 px-4 shadow')
            form(class='space-y-5' method='POST' action="/auth/register")
                div
                    label(class='block text-sm uppercase text-gray-500 mb-2 font-bold' for="name") Name
                    input#name(class='w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400'
                    placeholder='Your name' type='text' name='name' value=user ? user.name : '')
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='@email' type='email' name='email' value=user ? user.email : '')
                div
                    label(class='block text-sm uppercase text-gray-500 mb-2 font-bold' for="pwd") Password
                    input#pwd(class='w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400'
                    placeholder='Password' type='password' name='pwd' value=user ? user.pwd : '')
                div
                    label(class='block text-sm uppercase text-gray-500 mb-2 font-bold' for="repeat") Repeat Password
                    input#repeat(class='w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400'
                    placeholder='Repeat Password' type='password' name='repeatPwd' value=user ? user.repeatPwd : '')
                    
                div(class='flex items-center justify-between')
                    a.text-gray-500.text-xs(href="/auth/login") Already have an account?
                    a.text-gray-500.text-xs(href="/auth/forgot-pwd") Forgot password
                input(class='w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer' type='submit' value='Create Account')
                