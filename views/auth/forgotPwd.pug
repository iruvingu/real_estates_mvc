extends ../layout/index

block content
    div.py-10
    h1.text-4xl.my-10.font-extrabold.text-center Real
        span.font-normal Estates
    h2.text-center.text-2xl.font-extrabold=page

    div(class='mt-8 mx-auto max-w-md')
        div(class='bg-white py-8 px-4 shadow')
            form(class='space-y-5')
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='@email' type='email' name='email')
                input(class='w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer' type='submit' value='Send instructions')
                